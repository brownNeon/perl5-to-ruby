#!/usr/bin/perl

use feature qw(say);
use warnings;
use strict;
use PPI;
use Data::Dumper;
use Carp;
use FindBin;

use lib "${FindBin::Bin}/../lib/perl";
use P2R;

unless (scalar(@ARGV)>0) {
    die "Must give perl file as argument\n";
}
my $document = PPI::Document->new( 
   $ARGV[0] , readonly => 1,
);
$document->index_locations();
$document->remove_trailing_semicolons();
	    
$document->to_ruby;
print $document->ruby_content;


